      <%= link_to image_tag('subnav-down-arrow.png'), 'javascript:showSubmenu(\'weeks_submenu\', \'weeks_menu_item\')', :class => "submenu-arrow" %> 
      <%= link_to "Weeks#{@week ? ' ('+@week+')' : ''}&nbsp;", '/countries_performance/1/week' %> 
      <ol class="sub-menu hidden" id="weeks_submenu">
        <li><%= link_to 'Q1 P1 W1: 9/26/09 - 10/1/09', "/countries_performance/1/week" %></li>
