      </ol>
    </li>
    <li class="chevron with-submenu <%= @subsection == "show" ? 'active' : '' %>" id="periods_menu_item">
      <div class="chevron-divider <%= @subsection == "index" ? ' active-chevron-before' : ' inactive-chevron-before' %>">
        <%= link_to image_tag('subnav-chevron-down-arrow.png'), 'javascript:showSubmenu(\'periods_submenu\', \'periods_menu_item\')', :class => "submenu-arrow" %>       
