


<div id="subnav">
  <ul>
    <!-- <li><%= link_to image_tag('subnav-back-button.png'), '' %></li> -->
    <li class="chevron with-submenu <%= @subsection == "index" ? 'active' : '' %>" id="locales_menu_item">
      <%= link_to image_tag('subnav-chevron-down-arrow.png'), 'javascript:showSubmenu(\'locales_submenu\', \'locales_menu_item\')', :class => "submenu-arrow" %> 
      <%= link_to 'FY 2009&nbsp;', '/countries_performance' %>
